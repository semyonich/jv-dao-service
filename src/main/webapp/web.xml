<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>core.basesyntax.controller.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriver</servlet-name>
        <servlet-class>core.basesyntax.controller.driver.AddDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allDrivers</servlet-name>
        <servlet-class>core.basesyntax.controller.driver.GetAllDriversController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allDrivers</servlet-name>
        <url-pattern>/drivers/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addManufacturer</servlet-name>
        <servlet-class>core.basesyntax.controller.manufacturer.AddManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allManufacturers</servlet-name>
        <servlet-class>core.basesyntax.controller.manufacturer.GetAllManufacturersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allManufacturers</servlet-name>
        <url-pattern>/manufacturers/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addCar</servlet-name>
        <servlet-class>core.basesyntax.controller.car.AddCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>core.basesyntax.controller.car.GetAllCarsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/cars/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allMyCars</servlet-name>
        <servlet-class>core.basesyntax.controller.car.GetMyCurrentCarsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allMyCars</servlet-name>
        <url-pattern>/cars/my</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>core.basesyntax.controller.car.driver.AddDriverToCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginDriver</servlet-name>
        <servlet-class>core.basesyntax.controller.driver.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginDriver</servlet-name>
        <url-pattern>/drivers/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>core.basesyntax.web.filter.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
